








{% extends 'base.html.twig' %}


{% block body %}

	{% for message in app.flashes('warning') %}
		<div class="justify-center text-center mx-80  mt-10 p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
			{{message}}
		</div>
	{% endfor %}
	<div class="flex md:justify-center mt-16">
		<table class=" table-auto">
			<thead class="bg-[#2B292D] text-white">
				<tr>

					<th class="p-5">Nom du projet</th>
					<th class="p-5">Prix</th>
					<th class="p-5">Statut</th>
					<th class="p-5"></th>

				</tr>
			</thead>

			

				<tbody>
{% for order in user.orders %}

					<tr>

						<td class="text-center m-2">{{ order.ProjectName  }}</td>
						<td class="text-center m-2">{{ order.Price  }}$</td>
						<td>
							{% if order.status == 'progrès' %}
								<span class=" bg-yellow-600 pt-1 py-1 px-6 mx-9 m-2 text-white">
									{{order.status}}
								</span>
							{% elseif order.status == 'fini' %}
								<span class=" bg-green-600 pt-1 py-1 px-6 mx-9 m-2 text-white">
									{{ order.status }}
								</span>
							{% elseif order.status =='rejeté' %}
								<span class=" bg-red-600 pt-1 py-1 px-4 mx-9 m-2 text-white">
									{{order.status}}
								</span>
							{% else %}
								<span class=" bg-white">
									{{order.status}}
								</span>
							{% endif %}
						</td>
						<td>
							<button type="submit" class="inline-block bg-red-600 text-white  py-1 px-4 mx-9 m-2 hover:bg-white hover:text-indigo-700">
								<a href="/order/delete/{{ order.id }}">Effacer</a>
							</button>
						</td>
					</tr>
{% endfor %}
				</tbody>
		
		</div>
		<br>
	</table>
</div>{% endblock %}

