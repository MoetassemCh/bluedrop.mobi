{% extends 'base.html.twig' %}


{% block body %}


<div class="w-4/5 m-auto text-center">
	<div class="py-12 border-b border-gray-200">
		<h1 class="text-6xl pt-12 pb-8">
			Project Review
		</h1>

		<span class="font-light text-gray-500 italic">
			Created by Code With Dary
		</span>
	</div>
</div>

<div
	class="md:grid lg:grid-cols-3 gap-20 w-4/8 mx-auto py-15 ">
	<!-- Review Item -->
{% for project in projects %}

		<div class="text-center pt-40 pb-4">
		{% if project.image %}
<img src="{{absolute_url('upload/images/project/'~project.image)}}" alt="{{project.image}}" class="shadow-xl rounded-md"/>


		{% endif %}



			<h2 class="text-gray-700 font-bold text-3xl py-2">
{{ project.service }}

			</h2>

			<span class="text-gray-500">
				By
				<span class="italic text-sm text-gray-800">{{project.cost}}
				</span>

				<p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
					{{ project.description }}
				</p>

			</div>
<a href="{{path('order_store',{project: project.id})}}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded  transition-all hover:bg-gray-800 hover:text-white">


	Order
</a>

		{% endfor %}
	</div>


{% endblock %}
